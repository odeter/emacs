select sensor_id, client_addr as ip, host_name, mac
from dhcp_b9d73430f4cc82b02ef1
where client_addr!='' and host_name!=''
group by sensor_id, ip, host_name, mac
UNION ALL

SELECT sensor_id, ip, host_name
FROM (
select sensor_id, id_resp_h as ip, host_name as host_name,NULL as mac
from ntlm_cd025fe0e04c76d22ed5
group by sensor_id, ip, host_name, mac
UNION
select sensor_id, id_resp_h as ip, server_dns_computer_name as host_name,NULL as mac
from ntlm_cd025fe0e04c76d22ed5
group by sensor_id, ip, host_name, mac) as foo
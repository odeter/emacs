#!/bin/bash

args=("$@")

while test $# -gt 0; do
    case "$1" in
        -h|--help)
            echo "$package - Upload package from test folder to angle"
            echo " "
            echo "$package [options] username apikey"
            echo " "
            echo "options:"
            echo "-h, --help     show brief help"
            echo "-t,            upload to local server"
            echo "-b,            upload to bull server"
            exit 0
            ;;
        -t)
            if [ "$#" -eq 3 ]; then
                cd testdata/
                for f in *.gz; do
                    echo ${f}
                    curl -F "username=${args[1]} " -F "apikey=${args[2]}" -F "file=@${f}" localhost:5000/datastream
                done
            else
                echo "Three arguments have to be given"
                exit 1
            fi
            ;;
        -b)
            if [ "$#" -eq 3 ]; then
                cd testdata/
                for f in *.gz; do
                    echo ${f}
                    curl -F "username=${args[1]} " -F "apikey=${args[2]}" -F "file=@${f}" https://bull.derant.com/datastream
                done
            else
                echo "Three arguments have to be given"
                exit 1
            fi
            ;;
        -m)
            if [ "$#" -eq 3 ]; then
                cd testdata/
                for f in *.gz; do
                    echo ${f}
                    curl -F "username=${args[1]} " -F "apikey=${args[2]}" -F "file=@${f}" https://moose.derant.com/datastream
                done
            else
                echo "Three arguments have to be given"
                exit 1
            fi
            ;;
        *)
            break
            ;;
    esac
done

#!/bin/bash
# A simple script

args=("$@")

if [ "$1" == "-h" ]; then
    echo "$package - Checkup on the current sensors"
    echo " "
    echo "$package"
    exit 1
elif [ "$1" == '--local' ]; then
    source venv/bin/activate
    python3 sensor_status.py
else
    python3 cron_jobs/sensor_status/sensor_status.py
fi

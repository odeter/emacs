#!/bin/bash
# A simple script

if [ "$1" == "--local" ];
then
    echo "Running dash update"
    flock -n -x dash_check.py -c "python3 dash_check.py"
    echo "Dash update done (check logs)"
else
    mkdir -p $LOCKS

    # get lock
    exec 100>/app/uploads/locks/dash_check.lock || exit 1
    flock -n -x 100 || exit 1

    python3 cron_jobs/dash_update/dash_check.py
fi
